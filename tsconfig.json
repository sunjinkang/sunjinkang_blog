{
  "include": [
    "scripts/**/*.ts",
  ],
  // "exclude": [
  //   "node_modules",
  //   "**/*.spec.ts",
  //   "**/*.less",
  //   "**/*.css"
  // ],
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./scripts/generateScripts",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    // "rootDir": "./src"
    "baseUrl": ".",
    "paths": {
      // 为无扩展名导入创建路径映射
      "*": ["./scripts/generateBlog/*", "./scripts/generateBlog/*.js"]
    }
  }
}
